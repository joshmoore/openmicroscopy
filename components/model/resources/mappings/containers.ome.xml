<types>
	<type id="ome.model.internal.Link"/>
	<!-- PDI -->
	<type id="ome.model.containers.Project" named="true" described="true" annotated="true">
		<!-- Note: Name is optional in model-->
		<properties>
			<child name="datasetLinks" type="ome.model.containers.ProjectDatasetLink" target="ome.model.containers.Dataset"/>
		</properties>
	</type>
	<type id="ome.model.containers.Dataset" named="true" described="true" annotated="true">
		<!-- Note: Name is optional in model-->
		<properties>
			<parent name="projectLinks" type="ome.model.containers.ProjectDatasetLink" target="ome.model.containers.Project"/>
			<child name="imageLinks" type="ome.model.containers.DatasetImageLink" target="ome.model.core.Image"/>
		</properties>
	</type>
	<link id="ome.model.containers.ProjectDatasetLink">
		<properties>
			<from_parent type="ome.model.containers.Project"/>
			<to_child type="ome.model.containers.Dataset"/>
		</properties>
	</link>
	<link id="ome.model.containers.DatasetImageLink">
		<properties>
			<from_parent type="ome.model.containers.Dataset"/>
			<to_child type="ome.model.core.Image"/>
		</properties>
	</link>
	<type id="ome.model.containers.Folder" annotated="true">
		<properties>
			<optional name="ns" type="string"/>
			<optional name="name" type="string"/>
			<optional name="description" type="text"/>
			<optional name="parent" type="ome.model.containers.Folder"/>
			<map name="config" type="string"/>
		</properties>
	</type>
	<!-- links to top-level objects *other than*: project, dataset, screen -->
	<link id="ome.model.annotations.FolderAnnotationLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.annotations.Annotation"/>
		</properties>
	</link>
	<link id="ome.model.annotations.FolderExperimentLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.experiment.Experiment"/>
		</properties>
	</link>
	<link id="ome.model.annotations.FolderImageLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.core.Image"/>
		</properties>
	</link>
	<link id="ome.model.annotations.FolderInstrumentLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.acquisition.Instrument"/>
		</properties>
	</link>
	<link id="ome.model.annotations.FolderPlateLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.screen.Plate"/>
		</properties>
	</link>
	<link id="ome.model.annotations.FolderRoiLink">
		<properties>
			<from_parent type="ome.model.containers.Folder"/>
			<to_child type="ome.model.roi.Roi"/>
		</properties>
	</link>
</types>
