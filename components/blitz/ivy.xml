<ivy-module version="1.0">
  <info
      organisation="omero"
      module="blitz"
      status="integration"/>
  <configurations>
    <conf name="core"/>
    <conf name="build" extends="core"/>
    <conf name="test"  extends="core"/>
  </configurations>
  <publications>
    <artifact name="blitz" type="jar" conf="core" />
  </publications>
  <dependencies>
    <!-- Internal -->
    <dependency name="common" rev="${omero.version}" changing="true" />
    <dependency name="importer" rev="${omero.version}" changing="true" />
    <dependency name="romio" rev="${omero.version}" changing="true" />
    <dependency name="rendering" rev="${omero.version}" changing="true" />
    <dependency name="server" rev="${omero.version}" changing="true" />
    <dependency name="client" rev="${omero.version}" changing="true" conf="test->test"/>
    <!-- Public -->
    <dependency org="omero" name="ice" rev="${versions.ice}" conf="build->default"/>
  </dependencies>
</ivy-module>

