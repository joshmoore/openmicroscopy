<beans default-lazy-init="true">

    <bean id="ticket4821ldap" class="ticket4821.LdapPasswordProvider">
        <constructor-arg ref="passwordUtil"/>
        <constructor-arg ref="internal-ome.api.ILdap"/>
        <constructor-arg value="true"/>
    </bean>

    <bean id="ticket4821jdbc" class="ome.security.auth.JdbcPasswordProvider">
        <constructor-arg ref="passwordUtil"/>
    </bean>

    <bean id="customChainedPasswordProvider" class="ome.security.auth.PasswordProviders">
        <constructor-arg>
            <list>
                <ref bean="ticket4821ldap"/>
                <ref bean="ticket4821jdbc"/>
            </list>
        </constructor-arg>
    </bean>

</beans>
