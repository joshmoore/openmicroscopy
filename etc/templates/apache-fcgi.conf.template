###
### Stanza for OMERO.web created %(NOW)s
###

RewriteEngine on

<Directory "%(OMEROWEBROOT)s/static">
    Options -Indexes +FollowSymLinks
    Require all granted
</Directory>

<Directory "%(ROOT)s/etc/templates/error">
    Options -Indexes +FollowSymLinks
    Require all granted
</Directory>

<Location fcgi://%(FASTCGI_EXTERNAL)s/>
    Require all granted
</Location>

<Location %(CGI_PREFIX)s/>
    ErrorDocument 503 %(WEB_PREFIX)s/error/maintainance.html
</Location>

Alias %(WEB_PREFIX)s/error %(ROOT)s/etc/templates/error
Alias %(STATIC_URL)s %(OMEROWEBROOT)s/static

RewriteCond %%{REQUEST_URI} !^(%(STATIC_URL)s|%(CGI_PREFIX)s|%(WEB_PREFIX)s/error)
RewriteRule ^%(WEB_PREFIX)s(/|$)(.*) %(CGI_PREFIX)s/$2 [PT]
SetEnvIf Request_URI . proxy-fcgi-pathinfo=1
ProxyPass %(CGI_PREFIX)s/ fcgi://%(FASTCGI_EXTERNAL)s/
